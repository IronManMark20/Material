QPushButton, QPushButton:focus, QPushButton:focus {
  background-color: %s;
  border: none;
  color: #111111;
  padding: 3px 20px;
}


QPushButton:hover, QPushButton:hover:focus {
  background-color: #2196f3;
  border-color: #ffffff;
}



QPushButton:pressed,
QPushButton:pressed:focus {
  background-color: #f50057;
  border: none;
  color: black;
}

QPushButton:disabled {
    color: #cccccc;
    border: none
    
}